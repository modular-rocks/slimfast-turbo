{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": { "noUselessConstructor": "off", "noBannedTypes": "off" },
      "correctness": { "noUnusedVariables": "off" },
      "style": {
        "noParameterAssign": "off",
        "useBlockStatements": "off",
        "useExportType": "error",
        "useImportType": "error"
      },
      "suspicious": { "noAsyncPromiseExecutor": "off", "noExplicitAny": "off" },
      "nursery": { "useImportExtensions": "error" }
    },
    "ignore": ["node_modules", "dist", "turbo", ".turbo", "coverage"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "ignore": [
      "node_modules",
      "dist",
      "turbo",
      ".turbo",
      "coverage",
      ".changeset/*.md"
    ]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "quoteStyle": "single"
    }
  }
}
